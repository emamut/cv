---
import Section from "../Section.astro"

const { skills, title } = Astro.props
---

<Section title={title}>
  <ul>
    {
      skills.map(({ name, icon } : {name: string; icon: string}) => {
        return (
          <li>
            <i class={`fa-brands fa-${icon} fa-2x`}></i> <span>{name}</span>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    align-items: center;
    background: #eee;
    border-radius: 6px;
    color: black;
    display: flex;
    font-size: 0.8rem;
    font-weight: 500;
    gap: 4px;
    padding: 0.2rem 0.6rem;
  }
</style>
